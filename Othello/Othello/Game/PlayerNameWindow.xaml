<Window x:Class="Othello.Game.PlayerNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Othello" Height="139" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="0,10">
                <Label DockPanel.Dock="Left" Content="Please enter your name :" Style="{StaticResource DefaultTextColor}"></Label>
                <TextBox Text="{Binding NameOfPlayer1}"></TextBox>
            </DockPanel>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" Content="Ok" Style="{StaticResource ButtonStyle}" Click="Button_Click">
        </Button>
    </DockPanel>
</Window>
