<Window x:Class="Othello.Game.PlayersNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Othello"
        Title="Othello" Height="214" Width="300" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Label Content="Please enter names of players" HorizontalAlignment="Center" Margin="0,10" Style="{StaticResource DefaultTextColor}"></Label>
            <DockPanel LastChildFill="True" VerticalAlignment="Center" >
                <Label DockPanel.Dock="Left" Content="Player 1 : " Style="{StaticResource DefaultTextColor}"></Label>
                <TextBox Text="{Binding NameOfPlayer1}"></TextBox>
            </DockPanel>
            <DockPanel LastChildFill="True" Margin="0,10" VerticalAlignment="Center">
                <Label DockPanel.Dock="Left" Content="Player 2 : " Style="{StaticResource DefaultTextColor}"></Label>
                <TextBox Text="{Binding NameOfPlayer2}"></TextBox>
            </DockPanel>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" Content="Ok" Style="{StaticResource ButtonStyle}" Click="Button_Click">
            
        </Button>
    </DockPanel>
</Window>
